.modal
  &.modal-fullscreen
    .modal-content, .modal-dialog
      bottom: 0
      left: 0
      position: absolute
      right: 0
      top: 0

    .modal-dialog
      margin: 0
      width: 100%

    .modal-content
      border: none
      -moz-border-radius: 0
      border-radius: 0
      -webkit-box-shadow: inherit
      -moz-box-shadow: inherit
      -o-box-shadow: inherit
      box-shadow: inherit

    &.force-fullscreen
      .modal-body
        padding: 0
      .modal-header, .modal-footer
        left: 0;
        position: absolute
        right: 0;
      .modal-header
        top: 0
      .modal-footer
        bottom: 0
